<body>

  <%= form_for(@job) do |f| %>
 
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
          <ul>
          <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      </div>
    <% end %>

    <div class="field date-field">
      <%= f.label :app_dt, "Application Date: (YYYY-MM-DD)" %><br>
      <%= f.text_field :app_dt, :required => true %>
    </div>
    <div class="field">
      <%= f.label :co_name, "Company Name:" %><br>
      <%= f.text_field :co_name %>
    </div>
    <div class="field">
      <%= f.label :co_url, "Company Website URL:" %><br>
      <%= f.text_field :co_url %>
    </div>
    <div class="field">
      <%= f.label :job_title, "Position Title:" %><br>
      <%= f.text_field :job_title %>
    </div>
    <div class="field">
      <%= f.label :list_url, "Position Listing URL:" %><span>(link to position listing)</span>
      <%= f.text_field :list_url %>
    </div>
    <div class="field">
      <%= f.label :app_url, "Application URL:" %><span>(if link to apply is a third-party site)</span>
      <%= f.text_field :app_url %>
    </div>
    <div class="field">
      <%= f.label :res_url, "Link to Resume Version Submitted:" %><a href="http://www.howtogeek.com/196435/how-to-share-files-and-folders-from-your-cloud-storage-folder/" target="_blank"> (?) </a><br>
      <%= f.text_field :res_url %>
    </div>
    <div class="field">
      <%= f.label :cover_url, "Link to Cover Letter Version Submitted:" %><a href="http://www.howtogeek.com/196435/how-to-share-files-and-folders-from-your-cloud-storage-folder/" target="_blank"> (?) </a><br>
      <%= f.text_field :cover_url %>
    </div>
    <div class="field">
      <%= f.label :notes, "Notes:" %><br>
      <%= f.text_area :notes %>
    </div>

    <br>

    <div class="container-medium submit-button">
        <%= f.submit %>
    </div>

  <% end %>
  
</body>