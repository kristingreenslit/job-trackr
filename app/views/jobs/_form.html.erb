<body>

  <%= form_for(@job) do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
          <ul>
          <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      </div>
  <% end %>

    <div class="field date-field">
      <%= f.label :app_dt, "Submission Date: (MM/DD/YYYY)" %><br>
      <%= f.date_field :app_dt, :required => true, :pattern => '^(((((0[1-9])|(1\d)|(2[0-8]))\/((0[1-9])|(1[0-2])))|((31\/((0[13578])|(1[02])))|((29|30)\/((0[1,3-9])|(1[0-2])))))\/((20[0-9][0-9])|(19[0-9][0-9])))|((29\/02\/(19|20)(([02468][048])|([13579][26]))))$' %>
    </div>
    <div class="field">
      <%= f.label :co_name, "Company Name:" %><br>
      <%= f.text_field :co_name %>
    </div>
    <div class="field">
      <%= f.label :co_url, "Company Website URL:" %><br>
      <%= f.text_field :co_url %>
    </div>
    <div class="field">
      <%= f.label :job_title, "Position Title:" %><br>
      <%= f.text_field :job_title %>
    </div>
    <div class="field">
      <%= f.label :list_url, "Position Listing URL:" %><br>
      <%= f.text_field :list_url %>
    </div>
    <div class="field">
      <%= f.label :app_url, "Application URL:" %><br>
      <%= f.text_field :app_url %>
    </div>
    <div class="field">
      <%= f.label :res_url, "Link to Resume Version Submitted:" %><br>
      <%= f.text_field :res_url %>
    </div>
    <div class="field">
      <%= f.label :cover_url, "Link to Cover Letter Version Submitted:" %><br>
      <%= f.text_field :cover_url %>
    </div>
    <div class="field">
      <%= f.label :notes, "Notes:" %><br>
      <%= f.text_area :notes %>
    </div>

  <br>

    <div class="container-medium submit-button">
        <%= f.submit %>
    </div>

<!--   <br> -->

  <% end %>
</body>