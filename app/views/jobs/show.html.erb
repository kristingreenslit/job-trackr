<body background="/assets/talking.jpg">
  <div id="main-nav">
    <div id="masthead"><a href="/jobs.html/">Job Trackr</a></div>
    <div id="tagline"><%= @job.job_title %> at <%= @job.co_name %></div>
  </div>

  <div id="notices-jobs">
    <div class="login-status-jobs">
        <% if current_user %>
          <li><%= link_to "Signout ( #{current_user.email} )", destroy_user_session_path, :method => :delete %></li>
        <% end %>
    </div>
    <p id="notice-jobs"><%= notice %></p>
  </div>

  <div class="container"><br>
    <div class="container-content"><br>
      <div class="container-medium-home">
        <%= link_to 'Edit', edit_job_path(@job) %>
        <%= link_to 'Create New', new_job_path %>
        <%= link_to 'View All', jobs_path %>
        <%= link_to 'Delete', @job, method: :delete, data: { confirm: 'Are you sure you want to delete this job application?' } %>
      </div><br>
        <p><strong>Submission Date:</strong><%= @job.app_dt.strftime("%m/%d/%Y") %></p>
        <p><strong>Company Name:</strong><%= @job.co_name %></p>
        <p><strong>Company Website URL:</strong><a href="<%=@job.co_url%>" target="_blank"><%=@job.co_url%></a></p>
        <p><strong>Position Title:</strong><%= @job.job_title %></p>
        <p><strong>Position Listing URL:</strong><a href="<%=@job.list_url%>" target="_blank"><%=@job.list_url%></a></p>
        <p><strong>Application URL:</strong><a href="<%=@job.app_url%>" target="_blank"><%=@job.app_url%></a></p>
        <p><strong>Link to Resume Version Submitted:</strong><a href="<%=@job.res_url%>" target="_blank"><%=@job.res_url%></a></p>
        <p><strong>Link to Cover Letter Submitted:</strong><a href="<%=@job.cover_url%>" target="_blank"><%=@job.cover_url%></a></p>
        <p><strong>Notes:</strong><%= @job.notes %></p><br>
    </div><br>
  </div>
</body>
