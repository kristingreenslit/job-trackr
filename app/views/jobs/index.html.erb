<body background="/assets/conf3.jpg">

  <div id="main-nav">

    <div id="masthead">Job Trackr</a></div>
    <div id="tagline">My Job Applications</div>

  </div>

  <div id="notices-jobs">
    <div class="login-status-jobs">
        <% if current_user %>
          <li><%= link_to "Signout ( #{current_user.email} )", destroy_user_session_path, :method => :delete %></li>
        <% end %>
    </div>
    <p id="notice-jobs"><%= notice %></p>
  </div>

  <br>
<div class="container-home">

  <br>

    <div class="container-medium-home">
        <%= link_to '+ Application', new_job_path %>
        <a href="/jobs.csv"><button class="btn btn-success">export all</button></a>
    </div>

  <br>
    <div id="table-home">
      <table id="jobstable" class="tablesorter">
      
        <thead>
          <tr>
            <th>Application Date</th>
            <th>Company Name</th>
            <th>Position Title</th>
           <!--  <th>Company Website URL</th> -->
            <th>Position Listing URL</th>
            <!-- <th colspan="1"></th> --> <!-- for more info column -->
          </tr>
        </thead>


        <tbody>

          <% @jobs.each do |job| %>

              <tr class="content">
                <td class="date-cell"><%= job.try(:app_dt).try(:strftime, "%m/%d/%Y") %></td>
                <td><%= job.co_name %></td>
                <td><%= job.job_title %></td>
               <!--  <td><a href="<%=job.co_url%>" target="_blank"><%=job.co_url%></a></td>    -->
                <td><a href="<%=job.list_url%>" target="_blank"><%=job.list_url%></a></td>  
                <td><span><div id="td-row"><%= link_to 'Modify', edit_job_path(job), :class => "table-button" %><%= link_to 'Details', job, :class => "table-button" %></div></span></td>
              </tr>

            
          <% end %>
        

        </tbody>
   
      </table>  

      <br>
    </div>

  </div>
</body>




